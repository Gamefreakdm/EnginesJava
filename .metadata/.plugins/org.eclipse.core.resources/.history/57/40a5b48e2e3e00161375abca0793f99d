package Graphics.Image;

public class Sprite {
	private final int Width, Height;
	private final int[] Pixels;

	public Sprite(int x, int y, int w, int h, SpriteSheet sheet) {
		Pixels = new int[w * h];
		Load(sheet, (x * w), (y * h), s);
		Width = w;
		Height = h;
	}

	public Sprite(int x, int y, int s, SpriteSheet sheet) {
		Pixels = new int[s * s];
		Load(sheet, (x * s), (y * s), s);
		Width = s;
		Height = s;
	}

	private void TLoad(SpriteSheet sp, int X, int Y, int w, int h) {
		for (int y = 0; y < h; y++)
			for (int x = 0; x < w; x++)
				Pixels[x + y * w] = sp.getPixels()[(x + X) + (y + Y) * sp.getWidth()];
	}

	private void OLoad(SpriteSheet sp, int X, int Y, int s) {
		for (int y = 0; y < s; y++)
			for (int x = 0; x < s; x++)
				Pixels[x + y * s] = sp.getPixels()[(x + X) + (y + Y) * sp.getSize()];
	}

	public int getSize() {
		return SIZE;
	}

	public int[] getPixels() {
		return Pixels;
	}
}