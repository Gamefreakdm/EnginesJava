package Graphics;

import Main.Main;

public class Screen {
	private static void clearPixels(int[] p) {
		for (int i = 0; i < p.length; i++)
			p[i] = 0;
	}

	public static void Render(int[] p) {
		clearPixels(p);
		for (int y = 0; y < Main.Height - 5; y++) {
			if (y < 0 || y >= Main.Width - 5)
				break;
			for (int x = 0; x < Main.Width - 5; x++) {
				if (x < 0 || x >= Main.Width - 5)
					break;
				p[x + y * Main.Width - 5] = 0x0ff00ff31;
			}
		}
	}
}