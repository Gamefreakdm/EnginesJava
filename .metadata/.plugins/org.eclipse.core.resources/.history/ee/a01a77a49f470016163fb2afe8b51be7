package GameObject;

import java.util.Vector;

public class MobHandler {
	private Vector<Mob> MobList = new Vector<Mob>(20);
	private Vector<Item> ItemList = new Vector<Item>(20);

	public void UpdateMobs() {
		for (int i = 0; i < MobList.size(); i++)
	}

	public void addMob(Mob mob) {
		if (MobList.get(MobList.size()) != null)
			MobList.add(mob);
		else
			MobList.setSize(MobList.size() + 10);
	}

	public void removeMob(Mob mob) {
		MobList.remove(mob);
		if (MobList.get(MobList.size() - 10) == null)
			MobList.setSize(MobList.size() - 10);
	}

	public void addItem(Item item) {
		if (MobList.get(ItemList.size()) != null)
			ItemList.add(item);
		else
			ItemList.setSize(ItemList.size() + 10);
	}

	public void removeItem(Item item) {
		ItemList.remove(item);
		if (ItemList.get(ItemList.size() - 10) == null)
			ItemList.setSize(ItemList.size() - 10);
	}
}