package Main;

import javax.swing.JFrame;

import GameObject.EntityHanlder;
import Graphics.Render.Screen;
import Input.InputHandler;

public class Game {
	private String gs;
	private double Time = 0;
	private EntityHanlder EnH = new EntityHanlder();

	public void Update(InputHandler IH, JFrame frame) {
		if (Time >= 20.0)
			Time = 0;
		Time += 0.1;
		frame.requestFocus();
		KeyUpdate(IH);
		EnH.UpdateMobs();
		EnH.UpdateItems();

	}

	private void KeyUpdate(InputHandler IH) {
	}

	public void Render(Screen screen) {
		MobH.RenderMobs(screen);
	}

	public double getTime() {
		return Time;
	}

	public String getGs() {
		return gs;
	}

	public void setGs(String gs) {
		this.gs = gs;
	}
}