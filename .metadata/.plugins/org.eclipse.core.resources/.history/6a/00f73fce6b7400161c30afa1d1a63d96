package Main;

import java.awt.Canvas;
import java.awt.Graphics;
import java.awt.image.BufferStrategy;
import java.awt.image.BufferedImage;
import java.awt.image.DataBufferInt;
import javax.swing.JFrame;
import Graphics.Render.Screen;
import Input.InputHandler;

public class Main extends Canvas implements Runnable {
	private Game game = new Game();
	private int[] Pixels = null;
	private Screen screen = null;
	private BufferedImage bm = null;
	private boolean Running = false;
	private Thread mainThread = null;
	private int Width = 800, Height = 600;
	private static final long serialVersionUID = 1L;
	private final InputHandler IH = new InputHandler();
	private final JFrame Frame = new JFrame("Loading...");

	public static void main(String args[]) {
		Main m = new Main();
		m.Frame.add(m);
		m.Frame.setSize(m.Width, m.Height);
		m.Frame.setLocationRelativeTo(null);
		m.Frame.setResizable(true);
		m.Frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		m.Frame.setVisible(true);
		m.Start();
	}

	private void Start() {
		mainThread = new Thread(this);
		mainThread.start();
		Running = true;
	}

	public void run() {
		while (Running) {
			Update();
			Render();
		}
	}

	private void Update() {
		if (Frame.getWidth() != Width || Frame.getHeight() != Height) {
			Width = Frame.getWidth();
			Height = Frame.getHeight();
			bm = new BufferedImage(Width, Height, BufferedImage.TYPE_INT_RGB);
			Pixels = ((DataBufferInt) bm.getRaster().getDataBuffer()).getData();
			screen.UpdateSize(Width, Height);
		}
		game.Update();
	}

	private void Render() {
		final BufferStrategy bs = getBufferStrategy();
		if (bs == null) {
			createBufferStrategy(3);
			bm = new BufferedImage(Width, Height, BufferedImage.TYPE_INT_RGB);
			Pixels = ((DataBufferInt) bm.getRaster().getDataBuffer()).getData();
			screen = new Screen(Width, Height, Pixels);
			return;
		}
		Graphics g = bs.getDrawGraphics();
		screen.clearPixels();
		screen.RenderCol(10, 10, 20, 0x00FF00FF);
		g.dispose();
		bs.show();
	}

	@Override
	public int getWidth() {
		return Width;
	}

	public void setWidth(int width) {
		Width = width;
	}

	@Override
	public int getHeight() {
		return Height;
	}

	public void setHeight(int height) {
		Height = height;
	}
}