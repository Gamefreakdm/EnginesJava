package Level.Tile;

import Graphics.Image.Sprite;

public class Tile {
	private int X, Y;
	private final Sprite sprite;
	private final boolean IsSolid;

	public Tile(int x, int y, Sprite sp, boolean issolid) {
		sprite = sp;
		IsSolid = issolid;

	}

	public Sprite getSprite() {
		return sprite;
	}

	public boolean isIsSolid() {
		return IsSolid;
	}

	public int getX() {
		return X;
	}

	public void setX(int x) {
		X = x;
	}

	public int getY() {
		return Y;
	}

	public void setY(int y) {
		Y = y;
	}
}